<% include ../partials/header.ejs %>

<div class="container">

    <div class="row">

        <h1 style="text-align: center"> Create a new campground </h1>

        <div style="width: 30%; margin:25px auto">
            <form action="/campgrounds" , method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" , name="name" , id="name" , placeholder="name">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" , name="price" , id="price" placeholder="price" ,
                        min="0.01" , step="0.01">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="file" , name="image" , id="image" , accept="image/*" required
                        placeholder="image">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" , name="location" , id="location"
                        placeholder="Deere Park, Olympic National Park, CA">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" , name="description" , id="description" ,
                        placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>

            <a href="/campgrounds">Go Back</a>
        </div>

    </div>

</div>

<% include ../partials/footer.ejs %>